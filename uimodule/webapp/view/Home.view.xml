<mvc:View controllerName="lib.app.libAPI.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:table="sap.ui.table">
    <Page
        id="page"
        title="{i18n>title}">
        <content>
            <GenericTile
                class="sapUiResponsiveMargin"
                header="CREATE"
                press="onNavToCreate"
                subheader="HTTP POST">
                <TileContent>
                    <ImageContent src="sap-icon://request" />
                </TileContent>
            </GenericTile>
            <GenericTile
                class="sapUiResponsiveMargin"
                header="READ"
                press="onNavToGet"
                subheader="HTTP GET">
                <TileContent>
                    <ImageContent src="sap-icon://inspection" />
                </TileContent>
            </GenericTile>
            <GenericTile
                class="sapUiResponsiveMargin"
                header="UPDATE"
                press="onNavToPut"
                subheader="HTTP PUT">
                <TileContent>
                    <ImageContent src="sap-icon://create-form" />
                </TileContent>
            </GenericTile>
            <GenericTile
                class="sapUiResponsiveMargin"
                header="DELETE"
                press="onNavToDelete"
                subheader="HTTP DELETE">
                <TileContent>
                    <ImageContent src="sap-icon://delete" />
                </TileContent>
            </GenericTile>
        </content>
    </Page>
</mvc:View>
