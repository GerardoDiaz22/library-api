<mvc:View controllerName="lib.app.libAPI.controller.Get"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:table="sap.ui.table">
    <Page
        title="Read Database"
        showNavButton="true"
		navButtonPress="onNavBack">
        <content>
            <table:Table id="bookshelf" rows="{/}">
                <table:title>
                    <Text text="Bookshelf"></Text>
                </table:title>
                <table:columns>
                    <table:Column sortProperty="title" filterProperty="title">
                        <Label text="Book Title"/>
                        <table:template>
                            <Text text="{title}"></Text>
                        </table:template>
                    </table:Column>
                    <table:Column sortProperty="source" filterProperty="source">
                        <Label text="Book Source"/>
                        <table:template>
                            <Text text="{source}"></Text>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </content>
    </Page>
</mvc:View>
