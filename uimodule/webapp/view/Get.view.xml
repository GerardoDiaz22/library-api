<mvc:View controllerName="lib.app.libAPI.controller.Get"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page
        title="Read Database"
        showNavButton="true"
		navButtonPress="onNavBack">
        <content>
            <Table
                id="bookshelf"
                items="{
                    path: '/'
                }">
                <columns>
                    <Column>
                        <Text text="ID"/>
                    </Column>
                    <Column>
                        <Text text="Title"/>
                    </Column>
                    <Column>
                        <Text text="Subtitle"/>
                    </Column>
                    <Column>
                        <Text text="Authors"/>
                    </Column>
                    <Column>
                        <Text text="Editors"/>
                    </Column>
                    <Column>
                        <Text text="Category"/>
                    </Column>
                    <Column>
                        <Text text="Publish Date"/>
                    </Column>
                    <Column>
                        <Text text="Image"/>
                    </Column>
                    <Column>
                        <Text text="Description"/>
                    </Column>
                    <Column>
                        <Text text="Source"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{book_id}"/>
                            <Text text="{title}"/>
                            <Text text="{subtitle}"/>
                            <Text text="{authors}"/>
                            <Text text="{editors}"/>
                            <Text text="{category}"/>
                            <Text text="{publish_date}"/>
                            <Image width="125px" src="{image_path}"/>
                            <ExpandableText text="{description}"/>
                            <Text text="{source}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
